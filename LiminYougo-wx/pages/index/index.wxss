/**index.wxss**/
.pyg_index {
  background-color: #f7f7f7;
}
.pyg_index .index-swiper swiper {
  width: 750rpx;
  height: 340rpx;
}
.pyg_index .index-swiper swiper image {
  width: 100%;
}
.pyg_index .index-nav {
  display: flex;
  flex-flow: row wrap;
  align-content: flex-start;
  padding: 20rpx 0;
}
.pyg_index .index-nav navigator {
  padding: 0rpx 30rpx 30rpx 30rpx;
  flex: 1 0 20%;
  text-align: center;
}
.pyg_index .index-nav navigator image {
  width: 100%;
}
.pyg_index .index-nav navigator .index-nav-title {
  font-size: 20rpx;
}
.pyg_index .index-spike {
  padding: 0 20rpx;
}
.pyg_index .index-spike .spike {
  border-radius: 15rpx;
  background-color: #ffffff;
}
.pyg_index .index-spike .spike .spike-title {
  width: 100%;
  height: 1.7rem;
  line-height: 1.7rem;
  font-size: 24rpx;
  padding-left: 20rpx;
  vertical-align: middle;
  background-image: url(data:image/png;base64,);
  background-size: contain;
}
.pyg_index .index-spike .spike .spike-content {
  width: 100%;
  display: flex;
}
.pyg_index .index-spike .spike .spike-content .spike-item {
  flex: 1;
  justify-content: center;
  text-align: center;
  padding: 20rpx 10rpx;
}
.pyg_index .index-spike .spike .spike-content .spike-item navigator {
  padding: 10rpx;
}
.pyg_index .index-spike .spike .spike-content .spike-item navigator image {
  width: 100%;
}
.pyg_index .index-spike .spike .spike-content .spike-item .spike-text {
  color: #e4393c;
  font-size: 28rpx;
  font-weight: 700;
}
.pyg_index .index-floor {
  overflow: hidden;
  background-color: #f7f7f7;
  margin-top: 30rpx;
}
.pyg_index .index-floor navigator {
  float: left;
  width: 50%;
  padding: 0.25rem;
}
.pyg_index .index-floor navigator .floor-group {
  border-radius: 15rpx;
  background-color: #ffffff;
}
.pyg_index .index-floor navigator .floor-group .floor-image {
  width: 100%;
}
.pyg_index .index-floor navigator .floor-group .floor-image image {
  border-radius: 15rpx 15rpx 0 0;
}
.pyg_index .index-floor navigator .floor-group .floor-title {
  font-size: 28rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  padding: 0 10rpx;
}
.pyg_index .index-floor navigator .floor-group em {
  display: flex;
  justify-content: flex-start;
  align-items: flex-end;
  list-style: normal;
  font-size: 24rpx;
  color: #e4393c;
  font-weight: 400;
  padding: 20rpx;
}
.pyg_index .index-floor navigator .floor-group em .floor-text {
  font-size: 32rpx;
  font-weight: 700;
}
