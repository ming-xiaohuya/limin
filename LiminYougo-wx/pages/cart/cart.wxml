<!--pages/cart/cart.wxml-->
<view class="revice-address-row">
    <view class="address-btn" wx:if="{{!address.userName}}">
        <button type="primary" plain="{{true}}" bindtap = "handleChooseAddress">获取收货地址</button>
    </view>
    <view wx:else class="user-info-row">
        <view class="user-info">
            <view class="user">收货人：{{address.userName}}</view>
            <view class="user-phone">手机号码：{{address.telNumber}}</view>
        </view>
        <view>收货地址：{{address.provinceName+address.cityName+address.countyName+address.detailInfo}}</view>
    </view>
</view>

<view class="cart-content">
    <view class="cart-title">购物车</view>
    <view class="cart-mian">
        <block wx:if="{{cart.length!==0}}">
            <view 
                class="cart-item"
                wx:for="{{cart}}"
                wx:key="id"
            >
                <view class="cart-chk-wrap">
                    <checkbox-group data-id="{{item.products.id}}" bindchange="handleItemChange">
                        <checkbox checked="{{item.checked}}"/>
                    </checkbox-group>
                </view>
                <!-- 商品图片 -->
                <navigator class="cart-img-wrap">
                    <image mode="widthFix" src="{{item.products.productSrc}}"></image>
                </navigator>
                <!-- 商品信息 -->
                <view class="cart-info-wrap">
                    <view class="cart-name">{{item.products.title}}</view>
                    <view class="cart-price-wrap">
                        <view class="cart-price">￥{{item.products.price}}</view>
                        <view class="cart-num-tool">
                            <view class="num-edit" bindtap = "handleItemNumEdit" data-id="{{item.products.id}}" data-operation="{{-1}}">-</view>
                            <view class="cart-num">{{item.num}}</view>
                            <view class="num-edit" bindtap = "handleItemNumEdit" data-id="{{item.products.id}}" data-operation="{{1}}">+</view>
                        </view>
                    </view>
                </view>
            </view>
        </block>
        <block wx:else>
            还没有选购商品
        </block>
    </view>
</view>

<view class="footer-tool">
    <view class="all-chk-wrap">
        <checkbox-group bindchange="handleItemAllCheck">
            <checkbox checked="{{allChecked}}" />全选
        </checkbox-group>
    </view>
    <view class="total-price-wrap">
        <view class="total-price">
            合计：<text class="total-price-text">￥{{totalPrice}}</text>
        </view>
        <view>包含运费</view>
    </view>
    <view class="order-pay-wrap" bindtap = "handlePay">
        结算({{totalNum}})
    </view>
</view>
