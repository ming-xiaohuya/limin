/* pages/cart/cart.wxss */
page {
  padding-bottom: 90rpx;
}
.revice-address-row .address-btn {
  padding: 20rpx;
}
.revice-address-row .address-btn button {
  width: 60%;
}
.revice-address-row .user-info-row {
  padding: 20rpx;
  font-size: 28rpx;
}
.revice-address-row .user-info-row .user-info {
  display: flex;
}
.revice-address-row .user-info-row .user-info .user {
  flex: 3;
}
.revice-address-row .user-info-row .user-info .user-phone {
  flex: 5;
  text-align: right;
}
.cart-content .cart-title {
  font-size: 36rpx;
  padding: 20rpx;
  color: #000;
}
.cart-content .cart-mian .cart-item {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.cart-content .cart-mian .cart-item .cart-chk-wrap {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-content .cart-mian .cart-item .cart-img-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
}
.cart-content .cart-mian .cart-item .cart-img-wrap image {
  width: 80%;
}
.cart-content .cart-mian .cart-item .cart-info-wrap {
  flex: 4;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-name {
  font-size: 32rpx;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-price-wrap {
  display: flex;
  justify-content: space-between;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-price-wrap .cart-price {
  color: #e4393c;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-price-wrap .cart-num-tool {
  display: flex;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-price-wrap .cart-num-tool .num-edit {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  border: 1rpx solid #ccc;
}
.cart-content .cart-mian .cart-item .cart-info-wrap .cart-price-wrap .cart-num-tool .cart-num {
  width: 55rpx;
  height: 55rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.footer-tool {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 90rpx;
  background-color: #fff;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.footer-tool .all-chk-wrap {
  flex: 2;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 32rpx;
}
.footer-tool .total-price-wrap {
  flex: 5;
  text-align: right;
  padding-right: 20rpx;
  font-size: 32rpx;
}
.footer-tool .total-price-wrap .total-price .total-price-text {
  font-size: 36rpx;
}
.footer-tool .order-pay-wrap {
  flex: 3;
  background-color: var(--themeColor);
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  display: flex;
  justify-content: center;
  align-items: center;
}
