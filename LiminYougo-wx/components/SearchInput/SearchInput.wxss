/* components/SearchInput/SearchInput.wxss */
@import "../../styles/iconfont.wxss";
.search_input {
  height: 93rpx;
  background-color: var(--themeColor);
  position: relative;
}
.search_input image {
  width: 100%;
}
.search_input navigator {
  position: absolute;
  top: 10%;
  left: 50%;
  transform: translateX(-50%);
  width: 90%;
  height: 80%;
  line-height: 74rpx;
  background-color: #fff;
  border-radius: 60rpx;
  color: #666;
  font-size: 30rpx;
  padding-left: 20rpx;
  border: 1rpx solid red;
}
.search_input navigator .icon-sousuo {
  position: absolute;
  top: 0;
  left: 24rpx;
  font-size: 36rpx;
}
.search_input navigator .search-swiper swiper{
  padding-left: 60rpx;
  height: 65rpx;
}
.search_input navigator .searc-btn {
  position: absolute;
  right: 5rpx;
  top: 0;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: lighter;
  padding: 0 30rpx;
  border-radius: 60rpx;
  background-color: red;
}

